{
    "title": "Hotkey Window for Ghostty",
    "rules": [
        {
            "description": "Launch/show Ghostty if it is not in foreground",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open '/Applications/Ghostty.app'"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "left_option pressed",
                            "value": 1
                        },
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.mitchellh\\.ghostty$"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "left_option pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "left_option pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "left_option pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.mitchellh\\.ghostty$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Minimize Ghostty if it is in foreground",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "h",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "left_option pressed",
                            "value": 1
                        },
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.mitchellh\\.ghostty$"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "left_option pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "left_option pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "left_option pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.mitchellh\\.ghostty$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}